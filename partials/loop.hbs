{{#get "posts" filter="featured:true" limit="all" as |featured|}}
{{#if featured}}
    {{#foreach featured}}
<div class="muted card flex">
    <div class=" gatsby-image-wrapper"
        style="position: relative; overflow: hidden; display: inline-block; width: 45px; height: 45px;">
        {{#if featured}}
        <img aria-hidden="true" src="{{img_url feature_image}}" alt="{{title}}"
            style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; object-fit: cover; object-position: center center; opacity: 0;" />
        {{/if}}
    </div>
    <div>
        <time>{{date format="D MMM YYYY"}}</time>
        <a class="card-header" href="{{url}}">{{title}}</a>
    </div>
</div>
    {{/foreach}}
{{/if}}
{{/get}}